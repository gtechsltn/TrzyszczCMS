<div class="accordion">
    <div class="accordion-item">
        @Elements(this.GetContext())
    </div>
</div>


@code {

    /// <summary>
    /// Displayed collapses.
    /// </summary>
    [Parameter]
    public RenderFragment<AccordionElementContext> Elements { get; set; }
    /// <summary>
    /// HTML-compliant accordion ID.
    /// </summary>
    [Parameter]
    public string Id { get; set; }
    /// <summary>
    /// Get the context for this accordion.
    /// </summary>
    /// <returns>Accordion's context data</returns>
    private AccordionElementContext GetContext() => new AccordionElementContext()
    {
        AccordionId = Id
        // TODO: Implement sending accordion context as a cascading parameter.
    };
}
